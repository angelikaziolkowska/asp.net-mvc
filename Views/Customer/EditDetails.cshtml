@model Mvc4_Development_Test.Customer.CustomerBO

@{
    ViewBag.Title = "Update Customer Details";
    SelectList titlesDDL = new SelectList(Enum.GetNames(typeof(Titles)));
    }

@using (Html.BeginForm("EditDetails", "Customer", FormMethod.Post, new { id = "editdetailsform" }))
{
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(m => m.Customer_ID)
        <div class="editor-label">
            @Html.LabelFor(model => model.Title_ID)
        </div>

        <div class="editor-field">
            @Html.DropDownListFor(model => Model.Title_ID, titlesDDL, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Title_ID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Customer_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.Customer_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Customer_Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Customer_School, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="editor-field">
            @Html.EditorFor(m => m.Customer_School, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Customer_School)
            @Html.HiddenFor(m => m.Customer_ID)
            @Html.HiddenFor(m => m.Title_ID)
            @Html.HiddenFor(m => m.Customer_Email)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-default" />
        </p>
    </fieldset>
}

@section Scripts 
{
    @Scripts.Render("~/bundles/jqueryval")
}
